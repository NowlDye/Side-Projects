import csv

file = open('EmotionData.csv')

csvreader = csv.reader(file)

# Skip the header row if it exists
next(csvreader)

rowData = []

happy = []
bad = []
okay = []

# Loop through the rows
for row in csvreader:
    cleaned_row = [0 if col == '' else int(col) for col in row[1:4]]

    # Insert cleaned_row at the same index positions as the empty strings
    for i, col in enumerate(row[1:4]):
        if col == '':
            rowData.append(0)
        else:
            rowData.append(cleaned_row[i])

# Use the correct indexing for accessing elements in the list
for x in range(0, len(rowData)):
    if (x + 1) % 3 == 1:  # Append to 'happy' for every first element
        happy.append(rowData[x])
    elif (x + 1) % 3 == 2:  # Append to 'bad' for every second element
        bad.append(rowData[x])
    elif (x + 1) % 3 == 0:  # Append to 'okay' for every third element
        okay.append(rowData[x])

# Function to get the total number of data
def getTot(data):
    total = 0
    for x in range(0, len(data)): # Gets the total number of 1's and returns it
        total += data[x]
    return total
    
totHappy = getTot(happy)
totBad = getTot(bad)
totOkay = getTot(okay)

totals = []

totals.append(totHappy)
totals.append(totBad)
totals.append(totOkay)

print(totals)
